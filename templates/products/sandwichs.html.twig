{% extends 'base.html.twig' %}

{% block title %}Sandwich{% endblock %}
{% block meta_des_name %}Liste de nos sandwichs{% endblock %}
{% block meta_des_content %}Une peite faim découvrez nos sandwichs{% endblock %}
{% block body %}
<div class="container mt-5 shadow-lg p-3 mb-5 bg-white rounded">
    <h1 id="title_sandwichs" class="text-center text-light mt-5 bg-primary p-5">Découvrez nos sandwichs</h1>
    
    <div class="row">
        {% for product in products %}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mt-5">
            <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
                <div class="card-header text-center bg-primary">
                    <img src="{{asset('images/products/' ~ product.image)}}" class="resizing_image card-img-top" alt="Photo du produit,'{{product.name}}'">
                </div>
                <div class="card-body">
                    <h2 class="card-title text-center pb-2 mx-3 border-bottom border-primary h4"></h2>
                    <p class="card-text">
                        <h2 class="text-center h4">{{product.name}}</h2>
                        <table class="table text-center">
                            <tr>
                                <td>Prix</td>
                                <td>{{product.price}} euros</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>{{product.description}}</td>
                            </tr>
                        </table>
                        <p class="text-center text-primary">{{product.categoryprod.libelle}}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
