{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}
{% block monTitre %}Actualités{% endblock %}

{% block body %}
    <div class="container">
        <section class="">
            {% for post in posts %}
            <article class=" mt-2 mb-5 text-center  bg-light">
                <h2 class="h4 mt-2">{{post.title}}</h2>
                
                <div>Ecrit le : {{ post.createAt | date('d/m/Y')}} 
                <div class="mt-3">
                    <img src="{{ post.image}}" alt="Image de l'article">
                </div>
                <div>
                    <p>{{post.content | raw}}</p>    
                </div>
                <a href="{{path('show_post', {'id': post.id})}}" class="btn btn-primary mb-4"> Lire l'article</a>
            </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
