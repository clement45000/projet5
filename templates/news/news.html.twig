{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}
{% block monTitre %}Nos actualités{% endblock %}

{% block body %}
    <div class="container">
        <section class="">
            {% for post in posts %}
            <article class=" mt-2 mb-5  bg-light">
                <h2 class=" h4">{{post.title}}</h2>
                
                <div>Ecrit le : {{ post.createAt | date('d/m/Y')}} 
                <div>
                    <img src="{{ post.image}}" alt="Image de l'article">
                </div>
                <div>
                    <p>{{post.content | raw}}</p>    
                </div>
                <a href="#" class="btn btn-primary"> Lire l'article</a>
            </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
