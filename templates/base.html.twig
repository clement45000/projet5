                <a class="nav-link text-light" href="">Deconnexion</a>
            </div>
          </nav>
        <div class="container">


     
         <h1 class="text-center mt-5 mb-5 bg-primary text-light pt-5 pb-5 shadow">{% block monTitre %}{% endblock %}</h1> 
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
