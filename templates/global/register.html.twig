{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block meta_des_name %}S'inscrire{% endblock %}
{% block meta_des_content %}Venez vous inscrire et échanger avec la communautée{% endblock %}

{% block body %}
    <div class="container bg-light pt-1 mt-5 mb-5">
       <h1 class="text-center text-light mt-5 bg-primary p-5">Inscription</h1> 
       {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success">
            {{message}}
        </div>
        {% endfor %}


 
        {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}})}}
        {{ form_row(form.username, {"attr" : {'placeholder':'Entrez votre pseudo'},"label":"Pseudo"})}}
        {{ form_row(form.password, {"attr" : {'placeholder':'Entrez votre mot de passe'},"label":"Mot de passe"})}}
        {{ form_row(form.mail, {"attr" : {'placeholder':'Entrez votre e-mail'},"label":"Adress e-mail"})}}
        <input type="submit" class="btn btn-primary mb-5" value="S'inscrire">
        {{form_end(form)}} 

      
    </div>

{% endblock %}
