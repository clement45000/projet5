{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block monTitre %}Boulangerie Pâtisserie{% endblock %}

{% block body %}
<!-- carroussel-->
<div class="container">
<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="{{asset('images/products/portrait.jpg')}}" class="d-block w-100" style="height:30%" alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('images/products/fleur.jpg')}}" class="d-block w-100" style="height:30%"  alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('images/products/fond.jpg')}}" class="d-block w-100" style="height:30%" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <img src="" class="" alt="Image de l'article">
                <p class="mt-2">Nos publications</p>
            </div>
            <div class="col">
                <img src="" alt="Image de l'article">
                <p class="mt-2">Nos produits</p>
            </div>
                <div class="col">
                <img src="" alt="Image de l'article">
                <p class="mt-2">Nous contacter</p>
            </div>
        </div>
        <hr>
        <p class="text-center h3  mt-5">Dernière actualité</p>
        <section class="text-center">
            {% for lastpost in lastposts %}
            <article class=" mt-5 mb-5  bg-light">
                <h2 class="h4 mt-3">{{lastpost.title}}</h2>
                <div class="mb-5">Ecrit le : {{ lastpost.createAt | date('d/m/Y')}}</div>
                <div class="mt-2">
                    <img src="{{asset('images/products/' ~ lastpost.image)}}" alt="Image de l'article">
                </div>
                <a href="{{path('show_post', {'id': lastpost.id})}}" class="btn btn-primary mb-2 mt-3"> Lire l'article</a>
            </article>
            {% endfor %}
        </section>
    </div>









{% endblock %}
